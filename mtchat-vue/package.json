{
  "name": "@mtchat/vue",
  "version": "1.0.0",
  "description": "MultitenancyChat Vue.js SDK - embeddable chat component",
  "type": "module",
  "main": "./dist/mtchat-vue.umd.cjs",
  "module": "./dist/mtchat-vue.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mtchat-vue.js",
      "require": "./dist/mtchat-vue.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc --noEmit && vite build",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.6.1",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^4.0.18",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pohodnya/mtchat"
  },
  "keywords": [
    "chat",
    "vue",
    "sdk",
    "multitenancy",
    "b2b"
  ],
  "license": "MIT",
  "dependencies": {
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-mention": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-typography": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@tiptap/vue-3": "^3.19.0",
    "dompurify": "^3.3.1",
    "pdfjs-dist": "^5.4.624",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  }
}
